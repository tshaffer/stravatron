{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": [
            "off"
        ],
        "no-case-declarations": [
            "off"
        ],
        "no-console": [
            "off"
        ],
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
//        "quotes": [
//            "error",
//            "double"
//        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "extends": "eslint:recommended"
}
